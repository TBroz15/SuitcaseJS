{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "allowJs": true
  },
  "exclude": [
    "node_modules/**/*",
    "ci/*.js",
    "dist/**/*",
    "src/compiler/utils/JSONC/*.js"
  ]
}
